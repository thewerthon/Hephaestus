@namespace Hephaestus.Frontend.Components

<RadzenText Text="@Text" Style="width: 100%" class="rz-mt-2 rz-mb-0" />
@ChildContent

@code {

	/// <summary>
	/// Text to be displayed.
	/// </summary>
	[Parameter, EditorRequired]
	public string Text { get; set; } = string.Empty;

	/// <summary>
	/// Navigation items.
	/// </summary>
	[Parameter]
	public RenderFragment? ChildContent { get; set; }

}
