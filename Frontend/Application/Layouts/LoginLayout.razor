@inherits LayoutComponentBase

<!-- Components -->
<RadzenComponents />

<!-- Layout -->
<RadzenLayout class="login-bg">
	<RadzenBody>
		<RadzenStack JustifyContent="Radzen.JustifyContent.Center" Class="rz-mx-auto rz-p-4" Style="max-width: 700px; height: 100%;">
			<RadzenCard style="padding: 0; overflow: hidden; background-color: var(--rz-base-background-color);" class="rz-shadow-3 rz-border-radius-4">
				<RadzenRow Gap="0" RowGap="0">
					<RadzenColumn Size="12" SizeSM="5" Class="rz-background-color-primary rz-p-8 sidebar-gradient-login">
						<RadzenImage Path="images/logos/app-dark.svg" style="width: 140px" title="@AppInfo["Fullname"]" />
						<RadzenText Text="@AppText["0000"]" TextStyle="Radzen.Blazor.TextStyle.H2" class="rz-mt-4 rz-mt-md-12 rz-pt-0 rz-pt-md-12 rz-mb-6 rz-color-white rz-display-none rz-display-sm-block text-break" />
						<RadzenText Text="@AppText["0001"]" TextStyle="Radzen.Blazor.TextStyle.Body1" class="rz-mb-12 rz-pb-0 rz-pb-md-12 rz-color-white rz-display-none rz-display-sm-block">
						</RadzenText>
					</RadzenColumn>
					<RadzenColumn Size="12" SizeSM="7" class="rz-p-12">
						<RadzenStack AlignItems="AlignItems.Center" JustifyContent="JustifyContent.Center" Style="width:100%;height:100%">
							<LordIcon Icon="/pages/avatar.json" Anim="state" Trigger="auto-hover-click" Intro="in-reveal" State="hover-looking-around" Stroke="bold" Size="120px" />
							@Body
							<RadzenText Text="@AppText["0002"]" TextStyle="Radzen.Blazor.TextStyle.Caption" style="font-size:12px" class="rz-pt-6 rz-mb-0" />
							<RadzenRow Gap="5px" JustifyContent="JustifyContent.Center">
								<RadzenLink Text="@AppText["0003"]" Path="@AppPath["1001"]" Target="_blank" style="font-size:12px"></RadzenLink>
								<RadzenText Text="@AppText["0004"]" TextStyle="Radzen.Blazor.TextStyle.Caption" style="font-size:12px;padding-top: 1px" class="rz-link-text rz-m-0" />
								<RadzenLink Text="@AppText["0005"]" Path="@AppPath["1002"]" Target="_blank" style="font-size:12px"></RadzenLink>
							</RadzenRow>
							<RadzenRow Gap="5px" JustifyContent="JustifyContent.Center" class="rz-pt-2">
								<RadzenImage Path="images/langs/br.svg" Click="@(() => SetLang("pt"))" class="lang-quickbutton" title="Portugês (Brasileiro)" />
								<RadzenImage Path="images/langs/us.svg" Click="@(() => SetLang("en"))" class="lang-quickbutton" title="English (International)" />
								<RadzenImage Path="images/langs/sp.svg" Click="@(() => SetLang("es"))" class="lang-quickbutton" title="Español (Internacional)" />
							</RadzenRow>
						</RadzenStack>
					</RadzenColumn>
				</RadzenRow>
			</RadzenCard>
			<Footer InSidebar="false" />
		</RadzenStack>
	</RadzenBody>
</RadzenLayout>

@code {

	private string year = DateTime.Now.Year.ToString();

	private async Task SetLang(string lang) {
		await LocalStorage.RemoveItemAsync("UserInfo");
		await JSRuntime.InvokeVoidAsync("setLang", lang);
		NavigationManager.NavigateTo(NavigationManager.Uri, forceLoad: true);
	}

}