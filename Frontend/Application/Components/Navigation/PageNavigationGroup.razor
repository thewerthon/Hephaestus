@namespace Hephaestus.Frontend.Application.Components

<RadzenText Text=@($"{Text}:") Style="width: 100%" class="rz-mt-2 rz-mb-0" />

<RadzenRow Gap="20px" RowGap="20px" Style="@Style" class="@Class">
	@ChildContent
</RadzenRow>

@code {

	[Parameter, EditorRequired]
	public string Text { get; set; } = default!;

	[Parameter]
	public RenderFragment? ChildContent { get; set; }

	[Parameter]
	public string Style { get; set; } = "width: 100%";

	[Parameter]
	public string Class { get; set; } = default!;

}