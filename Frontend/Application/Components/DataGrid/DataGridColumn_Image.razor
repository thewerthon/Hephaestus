@namespace Hephaestus.Frontend.Application.Components
@inherits DataGridColumn<TItem>
@typeparam TItem

<RadzenDataGridColumn TItem=TItem Title=@AppColumns[Property] Filterable=false Sortable=false Resizable=false Reorderable=false Pickable=false Groupable=false MinWidth="64px" Width="64px" TextAlign=TextAlign.Center Visible=@Visible OrderIndex=@Order>
	<Template Context="item">
		@{
			var image = PropertyAccess.GetValue(item, Property).ToString();
			var title = TitleProperty is null ? string.Empty : PropertyAccess.GetValue(item, AppFields[TitleProperty]).ToString();
			<RadzenImage Path=@image Style="width:32px;height:32px" title=@title class="rounded-circle" />
		}
	</Template>
</RadzenDataGridColumn>

@code {

	[Parameter]
	public string? TitleProperty { get; set; } = default;

}