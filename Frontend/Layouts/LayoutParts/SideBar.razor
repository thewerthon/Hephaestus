@namespace Hephaestus.Frontend.Layouts.LayoutParts
@inherits Microsoft.AspNetCore.Components.ComponentBase

<!-- Logo -->
<RadzenStack AlignItems="Radzen.AlignItems.Center" Gap="0px" Style="padding:var(--rz-panel-menu-item-padding);border-bottom:var(--rz-panel-menu-item-border);cursor:pointer" class="app-sidebar-logo rz-pt-4 rz-pb-2" @onclick="@OnToggle">
	<RadzenRow AlignItems="AlignItems.Center" JustifyContent="JustifyContent.Center" Gap="10px" Style="flex-wrap:nowrap">
		<RadzenIcon Icon="arrow_back_ios" Style="display:none" class="back-icon" title="@AppText["0006"]" />
		<RadzenImage style="width:fit-content;height:38px;" class="logo logo-dark" title="@AppInfo["Fullname"]"></RadzenImage>
	</RadzenRow>
</RadzenStack>

<!-- Panel Menu -->
<RadzenPanelMenu Style="height:100%" class="sidebar-scrollbox scrollbar-hidden">

	<!-- System -->
	<RadzenText Text="@MenuNames["0000"]" TextStyle="TextStyle.Overline" TagName="TagName.P" class="app-sidebar-group" />
	<RadzenPanelMenuItem Text="@MenuNames["0100"]" Image="@MenuIcons["0100"]" Path="@MenuPaths["0100"]" Click="@OnNavigate" />
	<RadzenPanelMenuItem Text="@MenuNames["0200"]" Image="@MenuIcons["0200"]" Path="@MenuPaths["0200"]" Click="@OnNavigate" />

	<!-- Main Modules -->
	<RadzenText Text="@MenuNames["1000"]" TextStyle="TextStyle.Overline" TagName="TagName.P" class="app-sidebar-group" />
	<RadzenPanelMenuItem Text="@MenuNames["1100"]" Image="@MenuIcons["1100"]" Path="@MenuPaths["1100"]" Click="@OnNavigate" />
	<RadzenPanelMenuItem Text="@MenuNames["1200"]" Image="@MenuIcons["1200"]" Path="@MenuPaths["1200"]" Click="@OnNavigate" />
	<RadzenPanelMenuItem Text="@MenuNames["1300"]" Image="@MenuIcons["1300"]" Path="@MenuPaths["1300"]" Click="@OnNavigate" />
	<RadzenPanelMenuItem Text="@MenuNames["1400"]" Image="@MenuIcons["1400"]" Path="@MenuPaths["1400"]" Click="@OnNavigate" />
	<RadzenPanelMenuItem Text="@MenuNames["1500"]" Image="@MenuIcons["1500"]" Path="@MenuPaths["1500"]" Click="@OnNavigate" />
	<RadzenPanelMenuItem Text="@MenuNames["1600"]" Image="@MenuIcons["1600"]" Path="@MenuPaths["1600"]" Click="@OnNavigate" />
	<RadzenPanelMenuItem Text="@MenuNames["1700"]" Image="@MenuIcons["1700"]" Path="@MenuPaths["1700"]" Click="@OnNavigate" />
	<RadzenPanelMenuItem Text="@MenuNames["1800"]" Image="@MenuIcons["1800"]" Path="@MenuPaths["1800"]" Click="@OnNavigate" />
	<RadzenPanelMenuItem Text="@MenuNames["1900"]" Image="@MenuIcons["1900"]" Path="@MenuPaths["1900"]" Click="@OnNavigate" />

	<!-- Side Modules -->
	<RadzenText Text="@MenuNames["2000"]" TextStyle="TextStyle.Overline" TagName="TagName.P" class="app-sidebar-group" />
	<RadzenPanelMenuItem Text="@MenuNames["2100"]" Image="@MenuIcons["2100"]" Path="@MenuPaths["2100"]" Click="@OnNavigate" />
	<RadzenPanelMenuItem Text="@MenuNames["2200"]" Image="@MenuIcons["2200"]" Path="@MenuPaths["2200"]" Click="@OnNavigate" />
	<RadzenPanelMenuItem Text="@MenuNames["2400"]" Image="@MenuIcons["2400"]" Path="@MenuPaths["2400"]" Click="@OnNavigate" />
	<RadzenPanelMenuItem Text="@MenuNames["2600"]" Image="@MenuIcons["2600"]" Path="@MenuPaths["2600"]" Click="@OnNavigate" />

</RadzenPanelMenu>

<!-- Footer -->
<Footer InSidebar="true" />

@code {

	[Parameter]
	public EventCallback<EventArgs> Toggle { get; set; }

	public async Task OnToggle(EventArgs args) {
		await Toggle.InvokeAsync(args);
	}

	public async Task OnNavigate(EventArgs args) {

		var width = await JSRuntime.InvokeAsync<int>("getWindowWidth");

		if (width <= 768) {
			await Toggle.InvokeAsync(args);
		}

	}

}