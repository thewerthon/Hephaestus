@using Hephaestus.Frontend.Layouts
@using Hephaestus.Frontend.Layouts.NavRedirects
@namespace Hephaestus.Frontend

<CascadingAuthenticationState>
	<AuthorizeView>
		<Authorized>
			@RouterWithLayout(typeof(MainLayout))
		</Authorized>
		<NotAuthorized>
			@RouterWithLayout(typeof(VoidLayout))
		</NotAuthorized>
	</AuthorizeView>
</CascadingAuthenticationState>

@code {

	private RenderFragment RouterWithLayout(Type layoutType) => __builder => {

		<Router AppAssembly="@typeof(Application).Assembly">
			<Found Context="routeData">
				<AuthorizeRouteView RouteData="@routeData" DefaultLayout="typeof(MainLayout)">
					<NotAuthorized>
						@if (context.User.Identity?.IsAuthenticated != true) {
							<LoginRedirect />
						} else {
							<Error401 />
						}
					</NotAuthorized>
				</AuthorizeRouteView>
			</Found>
			<NotFound>
				<LayoutView Layout="@layoutType">
					<Error404 />
				</LayoutView>
			</NotFound>
		</Router>

	};

}