@namespace Hephaestus.Frontend

// Radzen
@using Radzen
@using Radzen.Blazor
@using Radzen.Blazor.Rendering
@inject DialogService DialogService
@inject TooltipService TooltipService
@inject ContextMenuService ContextMenuService
@inject NotificationService NotificationService

// Blazored
@using Blazored.LocalStorage
@using Blazored.SessionStorage
@inject ILocalStorageService LocalStorage
@inject ISessionStorageService SessionStorage

// System
@using System.Net.Http
@using System.Net.Http.Json
@using System.Globalization
@using System.Runtime.Serialization;

// Microsoft
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.AspNetCore.Components.Routing
@using Microsoft.AspNetCore.Components.Web
@using Microsoft.AspNetCore.Components.Web.Virtualization
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication
@using Microsoft.AspNetCore.Components.WebAssembly.Http
@inject NavigationManager NavigationManager

// JSInterop
@using Microsoft.JSInterop
@inject IJSRuntime JSRuntime

// Architect Models
@using Hephaestus.Architect.Application.Models
@using Version = Hephaestus.Architect.System.Models.Version

// Frontend Components
@using Hephaestus.Frontend.Application.Layouts
@using Hephaestus.Frontend.Application.Components
@using Hephaestus.Frontend.Application.Resources

// Frontend Services
@using Hephaestus.Frontend.Application.Services
@inject CursorService CursorService
@inject UsageLogService UsageLogService
@inject VariablesService VariablesService
@inject DatabaseService DatabaseService
@inject VersionService VersionService
@inject UserService UserService

// Assets Services
@inject IStringLocalizer<MenuIcons> MenuIcons
@inject IStringLocalizer<MenuImages> MenuImages
@inject IStringLocalizer<ButtonAnims> ButtonAnims
@inject IStringLocalizer<ButtonStains> ButtonStains

// Localization Services
@using Hephaestus.Frontend.Application.Localization
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<AppInfo> AppInfo
@inject IStringLocalizer<AppRoles> AppRoles
@inject IStringLocalizer<AppNames> AppNames
@inject IStringLocalizer<AppPaths> AppPaths
@inject IStringLocalizer<AppTexts> AppTexts
@inject IStringLocalizer<AppTitles> AppTitles
@inject IStringLocalizer<AppErrors> AppErrors
@inject IStringLocalizer<AppFields> AppFields
@inject IStringLocalizer<AppButtons> AppButtons

// Authorization
@attribute [Authorize]