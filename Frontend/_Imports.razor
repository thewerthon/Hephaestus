@namespace Hephaestus.Frontend

// Radzen
@using Radzen
@using Radzen.Blazor
@using Radzen.Blazor.Rendering
@inject DialogService DialogService
@inject TooltipService TooltipService
@inject ContextMenuService ContextMenuService
@inject NotificationService NotificationService

// Blazored
@using Blazored.LocalStorage
@using Blazored.SessionStorage
@inject ILocalStorageService LocalStorage
@inject ISessionStorageService SessionStorage

// System
@using System.Net.Http
@using System.Net.Http.Json
@using System.Globalization
@using System.Runtime.Serialization;

// Microsoft
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.AspNetCore.Components.Routing
@using Microsoft.AspNetCore.Components.Web
@using Microsoft.AspNetCore.Components.Web.Virtualization
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication
@using Microsoft.AspNetCore.Components.WebAssembly.Http
@inject NavigationManager NavigationManager

// JSInterop
@using Microsoft.JSInterop
@inject IJSRuntime JSRuntime

// Localization Service
@using Microsoft.Extensions.Localization
@using Hephaestus.Frontend.Localization
@inject IStringLocalizer<AppInfo> AppInfo
@inject IStringLocalizer<AppRole> AppRole
@inject IStringLocalizer<AppPath> AppPath
@inject IStringLocalizer<AppMenu> AppMenu
@inject IStringLocalizer<AppIcon> AppIcon
@inject IStringLocalizer<AppText> AppText
@inject IStringLocalizer<AppError> AppError
@inject IStringLocalizer<AppButton> AppButton

// Architect Models
@using Hephaestus.Architect.Models

// Frontend Components
@using Hephaestus.Frontend.Layouts
@using Hephaestus.Frontend.Components

// Frontend Services
@using Hephaestus.Frontend.Services
@inject VersionService VersionService
@inject UserService UserService

// Authorization
@attribute [Authorize]